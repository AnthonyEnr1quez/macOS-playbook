{
    "title": "Disable hide in intellij",
    "rules": [
      {
        "description": "Remap command-h to command-[ in intellij",
        "manipulators": [
          {
            "type": "basic",
            "description": "",
            "from": {
                "key_code": "h",
                "modifiers": {
                  "mandatory": ["command"]
                }
              },
              "to": [
                {
                  "key_code": "open_bracket",
                  "modifiers": [
                    "command"
                  ]
                }
              ],
            "conditions": [
                {
                    "type": "frontmost_application_if",
                    "bundle_identifiers": ["^com\\.jetbrains\\.intellij\\.ce$"]
                }
            ]
          }
        ]
      }
    ]
  }
  